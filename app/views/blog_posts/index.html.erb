<h1>Blog Posts</h1>
<div class="row">
  <% @blog_posts.each do |post| %>
    <div class="col-md-4">
      <div class="card mb-4">
        <% if post.image_url.present? %>
          <img src="<%= post.image_url %>" class="card-img-top" alt="<%= post.title %>">
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to post.title, blog_post_path(post) %></h5>
          <p class="card-text"><%= truncate(post.content, length: 100) %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
